{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":approveMajorUpdates",
    ":automergeLinters",
    ":automergePatch",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":automergeTesters",
    ":enablePreCommit",
    ":maintainLockFilesWeekly"
  ],
  "labels": [
    "dependencies"
  ],
  "minimumReleaseAge": "2 days",
  "packageRules": [
    {
      "automerge": true,
      "matchDatasources": [
        "git"
      ],
      "matchPackageNames": [
        "churchsuite"
      ]
    }
  ],
  "platformAutomerge": true,
  "timezone": "Europe/London",
  "vulnerabilityAlerts": {
    "addLabels": [
      "security"
    ]
  }
}
